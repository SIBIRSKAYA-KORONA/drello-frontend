<fest:template xmlns:fest="http://fest.mail.ru" context_name="data">
    <div class="popup auth-popup">
        <form action="" class="form auth-form" id="joinForm">
            <div class="title auth-form-title">
                Регистрация
            </div>
            <div id="inputNameError" class="input-error hidden">ERROR</div>
            <input class="form-input auth-form-input" autocomplete="off" type="text" placeholder="Имя"
                   id="inputName">
                <fest:attributes>
                    <fest:attribute name="value">
                        <fest:value>data.name</fest:value>
                    </fest:attribute>
                </fest:attributes>
            </input>
            <div id="inputSurnameError" class="input-error hidden">ERROR</div>
            <input class="form-input auth-form-input" autocomplete="off" type="text" placeholder="Фамилия"
                   id="inputSurname">
                <fest:attributes>
                    <fest:attribute name="value">
                        <fest:value>data.surname</fest:value>
                    </fest:attribute>
                </fest:attributes>
            </input>
            <div id="inputNicknameError" class="input-error hidden">ERROR</div>
            <input class="form-input auth-form-input" autocomplete="off" type="text" placeholder="Ник"
                   id="inputNickname">
                <fest:attributes>
                    <fest:attribute name="value">
                        <fest:value>data.nickname</fest:value>
                    </fest:attribute>
                </fest:attributes>
            </input>
            <div id="inputPasswordError" class="input-error hidden">ERROR</div>
            <input class="form-input auth-form-input" autocomplete="off" type="password" placeholder="Пароль"
                   id="inputPassword"/>
            <div id="inputPasswordRepeatError" class="input-error hidden">ERROR</div>
            <input class="form-input auth-form-input" autocomplete="off" type="password" placeholder="Повторите пароль"
                   id="inputPasswordRepeat"/>
            <div class="auth-form-bottom-panel">
                <button class="primary" id="submit_button">Зарегистрироваться</button>
                <a class="auth-form-link" href="">Уже есть аккаунт?</a>
            </div>
        </form>
    </div>
</fest:template>
