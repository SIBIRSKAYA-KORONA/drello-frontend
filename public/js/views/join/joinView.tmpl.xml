<fest:template xmlns:fest="http://fest.mail.ru" context_name="data">
    <div class="popup auth-popup">
        <form action="" class="form auth-form" id="joinForm">
            <div class="title auth-form-title">
                Регистрация
            </div>
            <input class="form-input auth-form-input" autocomplete="off" type="text" placeholder="Имя" id="userName"/>
            <input class="form-input auth-form-input" autocomplete="off" type="text" placeholder="Фамилия" id="userSurname"/>
            <input class="form-input auth-form-input" autocomplete="off" type="text" placeholder="Ник" id="userNickname"/>
            <input class="form-input auth-form-input" autocomplete="off" type="password" placeholder="Пароль" id="userPassword"/>
            <input class="form-input auth-form-input" autocomplete="off" type="password" placeholder="Повторите пароль"
                   id="userPasswordRepeat"/>
            <div class="auth-form-bottom-panel">
                <button class="primary" id="submit_button">Зарегистрироваться</button>
                <a class="auth-form-link" href="">Уже есть аккаунт?</a>
            </div>

        </form>
    </div>
</fest:template>
