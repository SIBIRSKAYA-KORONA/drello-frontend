<fest:template xmlns:fest="http://fest.mail.ru" context_name="data">
    <div class="header main-header">
        <div class="header-block-left">
            <div>
                <fest:choose>
                    <fest:when test="data.auth===true">
                        <div id="submitBoards" class="button header-button primary">Доски</div>
                    </fest:when>
                    <fest:otherwise>

                    </fest:otherwise>
                </fest:choose>
            </div>
        </div>
        <div class="header-block-center">
            <img class="avatar-round profile-header-avatar" src="/img/logo_drello.png"/>
            <div class="main-header-logo">
                DRELLO
            </div>
        </div>
        <div class="header-block-right">
            <fest:choose>
                <fest:when test="data.auth===true">
                    <div class="title main-header-title">
                        <fest:value>'@'+data.nickname</fest:value>
                    </div>
                    <img id="submitSettings" class="avatar-round main-header-avatar">
                        <fest:attributes>
                            <fest:attribute name="src">
                                <fest:value>data.avatar</fest:value>
                            </fest:attribute>
                        </fest:attributes>
                    </img>
                    <div id="submitLogout" class="button header-button danger">Выйти</div>
                </fest:when>
                <fest:otherwise>
                    <div id="submitLogin" class="button header-button primary">Войти</div>
                    <div id="submitJoin" class="button header-button secondary">Зарегистрироваться</div>
                </fest:otherwise>
            </fest:choose>
        </div>
    </div>
</fest:template>
