<fest:template xmlns:fest="http://fest.mail.ru" context_name="data">
    <div class="popup auth-popup">
        <form id="loginForm" class="form auth-form">
            <div class="title auth-form-title">
                Вход
            </div>
            <div id="inputLoginError" class="input-error hidden">ERROR</div>
            <input class="form-input auth-form-input" autocomplete="off" type="text" placeholder="Логин"
                   id="inputLogin">
                <fest:attributes>
                    <fest:attribute name="value">
                        <fest:value>data.login</fest:value>
                    </fest:attribute>
                </fest:attributes>
            </input>
            <div id="inputPasswordError" class="input-error hidden">ERROR</div>
            <input class="form-input auth-form-input" autocomplete="off" type="password" placeholder="Пароль"
                   id="inputPassword"/>
            <div class="auth-form-bottom-panel">
                <button class="primary" id="submit_button">Войти</button>
                <a class="auth-form-link" href="join">Регистрация</a>
            </div>
        </form>
    </div>
</fest:template>