<fest:template xmlns:fest="http://fest.mail.ru" context_name="labels" xmlns:fesr="http://fest.mail.ru">
    <div class="form pop-over">

        <div class="form-block">
            <div class="title-big">
                Create label
            </div>
        </div>

        <div class="form-block">
            <input class="form-input" placeholder="Name"/>
        </div>

        <fest:script>var labelColors = [
            'yellow',
            'orange',
            'red',
            'purple',
            'darkblue',
            'black',
            ]
        </fest:script>

        <div class="form-block">
            <div class="task-color-palette">
                <fest:for iterate="labelColors" index="i" value="labelColor">
                    <div class="task-label task-palette-color task-label-color-{labelColor} mod-selectable"></div>
                </fest:for>
            </div>
        </div>

        <div class="form-block">
            <div class="button primary">
                Create
            </div>
        </div>

    </div>
</fest:template>
