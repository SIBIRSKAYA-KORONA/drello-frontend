<fest:template xmlns:fest="http://fest.mail.ru" context_name="labelColors" xmlns:fesr="http://fest.mail.ru">
    <div class="form pop-over">

        <div class="form-block">
            <div class="title-big">
                Create label
            </div>
        </div>

        <div class="form-block">
            <input class="form-input js-inputLabelTitle" placeholder="Название"/>
        </div>

        <div class="form-block">
            <div class="task-color-palette">
                <fest:for iterate="labelColors" index="i" value="labelColor">
                    <div class="task-label task-palette-color task-label-color-{labelColor} mod-selectable js-chooseColor"
                    data-label-color="{labelColor}"></div>
                </fest:for>
            </div>
        </div>

        <div class="form-block">
            <div class="button primary js-createLabel">
                Create
            </div>
        </div>

    </div>
</fest:template>
