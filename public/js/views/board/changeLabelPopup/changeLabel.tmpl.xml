<fest:template xmlns:fest="http://fest.mail.ru" context_name="label" xmlns:fesr="http://fest.mail.ru">
    <div class="form pop-over">

        <div class="form-block">
            <div class="title-big">
                Create label
            </div>
        </div>

        <div class="form-block">
            <input class="form-input" placeholder="Name" value="{label.title}"/>
        </div>

        <fest:script>var labelColors = [
            'yellow',
            'orange',
            'red',
            'purple',
            'darkblue',
            'black',
            ]
        </fest:script>

        <div class="form-block">
            <div class="task-color-palette">
                <fest:for iterate="labelColors" index="i" value="labelColor">
                    <fest:if test="label.color === labelColor">
                        <div class="task-label task-palette-color task-label-color-{labelColor} mod-selectable active"></div>
                    </fest:if>
                    <fest:if test="label.color !== labelColor">
                        <div class="task-label task-palette-color task-label-color-{labelColor} mod-selectable"></div>
                    </fest:if>
                </fest:for>
            </div>
        </div>

        <div class="form-block">
            <div class="button primary">
                Save
            </div>
        </div>

    </div>
</fest:template>
