<fest:template xmlns:fest="http://fest.mail.ru" context_name="data" xmlns:fesr="http://fest.mail.ru">
    <div class="window-overlay popup">
        <div class="form settings-form">

            <div class="form-block">
                <div class="title-big">
                    <fest:value>
                        data.column.title
                    </fest:value>
                </div>
            </div>

            <div class="form-block">
                <div class="form-input-label">
                    Labels
                </div>

                <div class="board-task-label-container">
                    <fest:for iterate="data.task.labels" index="i" value="label">
                        <div class="board-task-label-mini task-label-color-{label.color}">
                            <fest:value>
                                label.title
                            </fest:value>
                        </div>
                    </fest:for>

                    <div class="button default" name="addNewLabelButton">+</div>
                </div>
            </div>

            <div class="form-block">
                <div class="form-input-label">
                    Members
                </div>
                <div class="member-container">
                    <fest:for iterate="data.task.members" index="i" value="member">
                        <a class="member" href="{member.url}">
                            <img class="board-member" src="{member.avatar}" alt="{member.nickname}"
                                 title="{member.nickname}"/>
                        </a>
                    </fest:for>
                    <div class="member button default" name="addNewMemberButton">+</div>
                </div>
            </div>

            <div class="form-block">
                <div class="form-input-label">
                    Description
                </div>
                <textarea>
                    <fest:value>
                        data.task.description
                    </fest:value>
                </textarea>
                <div class="button primary">Save</div>
            </div>


        </div>
    </div>
</fest:template>
